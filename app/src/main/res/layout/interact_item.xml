<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    >
    <RelativeLayout
        android:id="@+id/merank_ly"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:id="@+id/inte_item_userimg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_launcher_round"

            />
        <ImageView
            android:id="@+id/inte_item_rank"
            android:layout_width="15dp"
            android:layout_height="15dp"

            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"


            />
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >
        <TextView
            android:id="@+id/inte_item_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试"
            android:textColor="@color/carrot"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/inte_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="我睡了你叶子阿迪按s上述哈计算等级翻山倒海几号放假云想衣裳换线但是飞机上看到就放开手京东方科技的发动机开始交电费款空间的内存基督教奥斯卡的附件是今年成绩单从计算机和对方即可加快世纪城你设计"
            />
        <ImageView
            android:id="@+id/inte_item_img"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@mipmap/default_find"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >
            <Button
                android:id="@+id/inte_item_good"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/good"
                android:layout_toLeftOf="@+id/inte_item_num"
                android:focusable="false"
                />
            <TextView
                android:id="@+id/inte_item_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/background"
            />
    </LinearLayout>

</LinearLayout>