<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    >

    <ImageView
        android:id="@+id/inte_topimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/default_find"
        />

    <ImageView
        android:id="@+id/inte_userimg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/inte_topimg"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="-20dp"
        />

    <TextView
        android:id="@+id/inte_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/inte_userimg"
        android:layout_alignBottom="@+id/inte_topimg"
        android:text="测试"
        android:textColor="@color/bg_white"
        android:textStyle="bold"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        />

    <ListView
        android:id="@+id/inte_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:listSelector="#00000000"
        android:divider="#00000000"
        android:scrollbars="none"
        android:visibility="visible"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/inte_topimg"
        />

    <Button
        android:id="@+id/inte_add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/add"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        />

</RelativeLayout>